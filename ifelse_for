## Funcao ifelse ##
ifelse(test, yes, no)

--------exemplo 1--------
  
numero<-5
if(numero>0){
  print(numero)
}

if(numero>10){
  print(numero)
}

--------exemplo 2--------
  
ifelse(numero > 10,  numero , NA)

{
  if(numero > 10)
  numero 
  else  vazio
}

--------exemplo 3--------
  
teste1 <- c(6:-4)
sqrt(teste1)  # Erro
ifelse(teste1 >= 0, sqrt(teste1), NA) # Erro
sqrt(ifelse(teste1 >= 0, teste1, NA))


