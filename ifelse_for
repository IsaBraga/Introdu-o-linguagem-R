## Funcao for ##

for(i in 1:15){
  print(i)
}


for(i in 1:8){
  print("bla, bla, bla")
}


teste3<-c(8,15,46,23,18,4,22)
for(i in teste3){
  print(i)
}


abundancia<-c(5,8,9,1,0,7,6,12)
resul<-numeric(10)          
resu
for(j in 1:10){
  amostras<-sample(abundancia, replace=TRUE)
  resul[j]<-mean(amostras)
}

resul


for(i in 1:length(resul)){
  ifelse(sqrt(resul[i]) > 2.5, 
         resul[i] ^ 5,
         resul[i] - 10)    
  }


a5 <- c(a3, a4)
for(i in 1:length(a5)){
  if(a5[i]=="nao"){
    a5[i] <- "AAA"  
  }
  if(a5[i]=="atire"){
    a5[i] <- paste(a5[i], "i", sep="")
  }
  if(a5[i]=="porque"){
    a5[i] <- "mas"
  }
  if(a5[i]=="e"){
    a5[i] <- "nao"
  }
  if(a5[i]=="nosso"){
    a5[i] <- "morreu"
  }
  if(a5[i]=="amigo"){
    a5[i] <- "reu_reu"
  }
}

a5

teste2 <- head(randu)*10
for(i in 1:ncol(teste2)){
  for(j in 1:nrow(teste2)){
    ifelse (teste2[j,i] < 5, 
            teste2[j,i] <- sum(teste2[j,i],-100), 
            teste2[j,i] <- sum(teste2[j,i],100))  
      }
 
}



