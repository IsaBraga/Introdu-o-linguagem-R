  sum(teste2[i,2] , teste2[i,3]), NA)


ifelse(teste2[i,1] >= 0 & teste2[i,2] <= 5,teste2[i,3], NA)


--------exemplo 5--------
  
x <- 10

{
  if (x > 8)
    z <- 2 * x
}
z

{
  if (x > 12)
       z <- 2 * x
  else z <- 5 * x
}
z

